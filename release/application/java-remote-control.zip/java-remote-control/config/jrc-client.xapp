<xapp title="RDC Client">
	<menuBar>
		<menu name="View">
			<item name="Full Screen" command="setFullscreen"/>
		</menu>
	</menuBar>
	<view>
		<container type="splitPane" name="main" split="horizontal">
			<top>
		<container type="scrollPane" name="view" split="vertical">
			<table name="viewTable" cellPadding="5" rowPadding="2"/>
		</container>
			</top>
			<bottom>
		<container type="scrollPane" name="forms">
	<table name="server" cellPadding="5" rowPadding="2">
		<tr>
			<td>
				<table name="rates">
					<tr>
						<td>
				<input name="frameRate" color="#FFFF00" size="400" type="progress" orientation="vertical" valign="middle" title="Frames / Minute"/>
						</td>
					</tr>
				</table>
			</td>
			<td align="center">
	<table name="client-settings" cellPadding="2" rowPadding="1">
		<tr>
	<td align="right">Server Address</td>
			<td>
				<input type="text" name="serverAddress"/>
			</td>
		</tr>
		<tr>
	<td align="right">Server Port</td>
			<td>
				<input type="text" name="serverPort" format="Integer" size="5" value="169"/>
			</td>
		</tr>
		<tr>
	<td colspan="2">
	<separator width="300"/>
	</td>
		</tr>
		<tr>
	<td>Connect through hub</td>
			<td>
				<input type="checkbox" name="useHub"/>
			</td>
		</tr>
		<tr>
	<td align="right">User Name</td>
			<td>
				<input type="text" name="userName"/>
			</td>
		</tr>
		<tr>
	<td align="right">Password</td>
			<td>
				<input type="password" name="password"/>
			</td>
		</tr>
		<tr>
	<td align="right">Hub Address</td>
			<td>
				<input type="text" name="hubAddress"/>
			</td>
		</tr>
		<tr>
	<td align="right">Hub Port</td>
			<td>
				<input type="text" name="hubPort" format="Integer" size="5" value="169"/>
			</td>
		</tr>
		<tr>
	<td colspan="2">
	<separator width="300"/>
	</td>
		</tr>
		<tr>
	<td>Connect through http tunnel</td>
			<td>
				<input type="checkbox" name="useTunnel"/>
			</td>
		</tr>
		<tr>
	<td align="right">Tunnel Host</td>
			<td>
				<input type="text" name="tunnelHost" value="tunnelHost"/>
			</td>
		</tr>
		<tr>
	<td colspan="2">
	<separator width="300"/>
	</td>
		</tr>		
		<tr>
	<td align="right">Connect to User</td>
			<td>
				<input type="text" name="connectTo"/>
			</td>
		</tr>
		<tr>
	<td>View only</td>
			<td>
				<input type="checkbox" name="viewOnly"/>
			</td>
		</tr>
		<tr>
	<td colspan="2">
	<separator width="300"/>
	</td>
		</tr>
		<tr>
			<td align="center">
				<input type="button" name="connect" value="Connect" size="100"/>
			</td>
			<td align="center">
				<input type="button" name="disconnect" value="Disconnect" size="100"/>
			</td>
		</tr>
	</table>
			</td>
		</tr>
		<tr>
			<td align="center" colspan="2">
				<table name="status">
					<tr>
						<td>
							<textarea cols="40" rows="15" editable="false" style="normal" name="status"/>
						</td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
		</container>
			</bottom>
		</container>
	</view>
	
	<controller>
		<action name="connect"/>
		<action name="disconnect"/>
		<action name="setFullscreen"/>
		
		<activateDrop on="client-settings" as="client-settings" action="connect"/>		
		<activateDrag from="client-settings" as="client-settings.xml"/>
		
		<recieveXappData from="client-settings"/>
		<persistXappData from="client-settings" in="client.data.xml"/>			
		
		<pluginFolder>plugins</pluginFolder>
	</controller>
		
	<application>
		<forms>	
		</forms>
	</application>
	
<xScheme>
	<titleFontStyle>
<![CDATA[BOLD]]>
	</titleFontStyle>
	<titleFontFace>
<![CDATA[Tahoma]]>
	</titleFontFace>
	<titleFontSize>
<![CDATA[10]]>
	</titleFontSize>
	<guiFontStyle>
<![CDATA[PLAIN]]>
	</guiFontStyle>
	<guiFontFace>
<![CDATA[Tahoma]]>
	</guiFontFace>
	<guiFontSize>
<![CDATA[9]]>
	</guiFontSize>
	<textFontStyle>
<![CDATA[PLAIN]]>
	</textFontStyle>
	<textFontFace>
<![CDATA[Tahoma]]>
	</textFontFace>
	<textFontSize>
<![CDATA[9]]>
	</textFontSize>
	<backgroundColor>
<![CDATA[#383B49]]>
	</backgroundColor>
	<foregroundColor>
<![CDATA[#FFFFFF]]>
	</foregroundColor>
	<blackColor>
<![CDATA[#000000]]>
	</blackColor>
	<highlightColor>
<![CDATA[#4D4E63]]>
	</highlightColor>
	<shadowColor>
<![CDATA[#252C3C]]>
	</shadowColor>
	<textColor>
<![CDATA[#000055]]>
	</textColor>
	<selectedColor>
<![CDATA[#A5D7FF]]>
	</selectedColor>
	<disabledColor>
<![CDATA[#2C3B68]]>
	</disabledColor>
	<menuBackgroundColor>
<![CDATA[#5F76B8]]>
	</menuBackgroundColor>
	<menuForegroundColor>
<![CDATA[#6BABFF]]>
	</menuForegroundColor>
	<windowBackgroundColor>
<![CDATA[#383B49]]>
	</windowBackgroundColor>
</xScheme>

</xapp>